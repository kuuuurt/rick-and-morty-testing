<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAndMorty.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#252C38</item>
        <item name="colorPrimaryVariant">#252C38</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:navigationBarColor">@color/system_bar</item>
        <item name="android:statusBarColor">@color/system_bar</item>
        <item name="android:windowTranslucentStatus">@bool/translucent_status</item>
    </style>

    <style name="Theme.RickAndMorty" parent="Theme.RickAndMorty.Base"/>
    <style name="Theme.RickAndMorty.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- This attributes is used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@android:color/white</item>"
    </style>
</resources>